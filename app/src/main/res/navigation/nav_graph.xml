<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/exampleLinearLayoutFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.vmmarinc.sweetanikca.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.vmmarinc.sweetanikca.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/exampleLinearLayoutFragment"
        android:name="com.vmmarinc.sweetanikca.ExampleLinearLayoutFragment"
        android:label="fragment_example_linear_layout"
        tools:layout="@layout/fragment_example_linear_layout" />
    <fragment
        android:id="@+id/commentFragment"
        android:name="com.vmmarinc.sweetanikca.CommentFragment"
        android:label="fragment_comment"
        tools:layout="@layout/fragment_comment" />
</navigation>